<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ski.spot" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-permission android:name="android.permission.RECORD_AUDIO" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

        <activity
            android:name=".AddActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddText"
            android:label="@string/title_activity_add_text"
            android:parentActivityName=".AddActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ski.spot.AddActivity" />
        </activity>
        <activity
            android:name=".About"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName=".LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ski.spot.LoginActivity" />
        </activity>
        <activity
            android:name=".AddPhoto"
            android:label="@string/title_activity_add_photo"
            android:parentActivityName=".AddActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ski.spot.AddActivity" />
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".AddSound"
            android:label="@string/title_activity_add_sound"
            android:parentActivityName=".AddActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ski.spot.AddActivity" />
        </activity>
        <activity
            android:name=".AddQuote"
            android:label="@string/title_activity_add_quote"
            android:parentActivityName=".AddActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ski.spot.AddActivity" />
        </activity>
        <activity
            android:name=".AddVideo"
            android:label="@string/title_activity_add_video"
            android:parentActivityName=".AddActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ski.spot.AddActivity" />
        </activity>
        <activity
            android:name=".AddLink"
            android:label="@string/title_activity_add_link"
            android:parentActivityName=".AddActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ski.spot.AddActivity" />
        </activity>
    </application>

</manifest>
