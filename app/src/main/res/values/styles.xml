<resources>
<!--Kathy Kosinski-->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="Quote">
        <item name="android:textColor">#db6a51</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextMoment">
        <item name="android:textColor">#31362a</item>
        <item name="android:typeface">normal</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">18dp</item>

    </style>
    <style name="TextTitle">
        <item name="android:textColor">#31362a</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Link">
    <item name="android:textColor">#412f56</item>
    <item name="android:typeface">monospace</item>
    <item name="android:textSize">18dp</item>
    <item name="android:textStyle">italic</item>
    <item name="android:gravity">center</item>
    </style>

    <style name="Date">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#412f56</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="Caption">
        <item name="android:textColor">#412f56</item>
        <item name="android:typeface">monospace</item>
    </style>
<!-- just want to add something to make it easier to find this style.xml-->
</resources>
