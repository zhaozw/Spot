<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#3e453d">

    <!--sound button-->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soundButton"
        android:layout_marginTop="187dp"
        android:src="@drawable/ic_micround"
        android:onClick="addSound"
        android:layout_marginLeft="73dp"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--camera button-->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/photoButton"
        android:onClick="addPhoto"
        android:layout_toEndOf="@+id/soundButton"
        android:src="@drawable/ic_camround"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/soundButton"
        android:layout_alignLeft="@+id/movieButton"
        android:layout_alignStart="@+id/movieButton"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp" />

    <!--link button-->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linkButton"
        android:onClick="addLink"
        android:layout_toEndOf="@+id/photoButton"
        android:src="@drawable/ic_linkround"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/photoButton"
        android:layout_toRightOf="@+id/photoButton"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp" />
    <!--text button-->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textButton"
        android:src="@drawable/ic_launcher"
        android:onClick="addText"
        android:layout_below="@+id/soundButton"
        android:layout_alignLeft="@+id/soundButton"
        android:layout_alignStart="@+id/soundButton"
        android:background="@android:color/transparent"
        android:layout_margin="3dp" />
    <!--movie button-->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movieButton"
        android:layout_below="@+id/soundButton"
        android:layout_toRightOf="@+id/soundButton"
        android:layout_toEndOf="@+id/soundButton"
        android:onClick="addMovie"
        android:src="@drawable/ic_launcher"
        android:background="@android:color/transparent"
        android:layout_margin="3dp" />
    <!--quote button-->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quoteButton"
        android:layout_below="@+id/linkButton"
        android:onClick="addQuote"
        android:layout_toRightOf="@+id/movieButton"
        android:layout_toEndOf="@+id/movieButton"
        android:src="@drawable/ic_launcher"
        android:background="@android:color/transparent"
        android:layout_margin="3dp" />
</RelativeLayout>