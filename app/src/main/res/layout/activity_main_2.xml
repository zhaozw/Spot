<?xml version="1.0" encoding="utf-8"?>
<!--Kathy Kosinski-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0efd6">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/add_button"
            android:src="@drawable/ic_plusround"
            android:background="@android:color/transparent"
            android:onClick="addActivity"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Spotted in this area:"
            android:id="@+id/textView"
            android:textColor="#412f56"
            android:textAlignment="center"
            
            android:gravity="center"
            android:textStyle="bold|italic"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/space2435"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:background="#ffffffff" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/moment1"
            style="@style/Quote"
            android:layout_margin="5dp"
            android:background="#ffffffff" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_moment"
            style="@style/TextMoment"
            android:layout_margin="5dp"
            android:background="#ffffffff" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/media_gateway"
            android:layout_margin="5dp"
            android:background="#ffffffff"
            android:clickable="false" />

    </LinearLayout>

</ScrollView>
